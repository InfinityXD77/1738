local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Create main hub window
local Window = Rayfield:CreateWindow({
    Name = "1738 Hub",
    Icon = 0,
    LoadingTitle = "Loading...",
    LoadingSubtitle = "made by yt-@Opgamer73431",
    ShowText = "1738",
    Theme = "Default",
    ToggleUIKeybind = "K",
    DisableRayfieldPrompts = false,
    DisableBuildWarnings = false,
    ConfigurationSaving = {
        Enabled = true,
        FolderName = nil,
        FileName = "1738 Hub"
    },
    Discord = {
        Enabled = false,
        Invite = "noinvitelink",
        RememberJoins = true
    },
    KeySystem = false,
    KeySettings = {
        Title = "Untitled",
        Subtitle = "Key System",
        Note = "No method of obtaining the key is provided",
        FileName = "Key",
        SaveKey = true,
        GrabKeyFromSite = false,
        Key = {"Hello"}
    }
})

-- Main Tab: Hitbox
local Tab = Window:CreateTab("Main","box")
local Section = Tab:CreateSection("Hitbox")

local hv = 20

local Toggle = Tab:CreateToggle({
    Name = "Hitbox Toggle",
    CurrentValue = false,
    Flag = "hitboxtoggle",
    Callback = function(Value)
        if Value then
            _G.HeadSize = hv
            loadstring(game:HttpGet("https://raw.githubusercontent.com/InfinityXD77/1738/refs/heads/main/s/hitbox/script"))()
        end
    end,
})

local Slider = Tab:CreateSlider({
    Name = "Hitbox Value",
    Range = {0, 25},
    Increment = 1,
    Suffix = "",
    CurrentValue = hv,
    Flag = "hitboxvalue",
    Callback = function(Value)
        hv = Value
        if Toggle.CurrentValue then
            _G.HeadSize = hv
        end
    end,
})

-- Gaps Tab: Tweening
local Tab2 = Window:CreateTab("Gaps", "navigation-2")
local Section3 = Tab2:CreateSection("Tweening")

local Button1 = Tab2:CreateButton({
    Name = "Variant 1",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/InfinityXD77/1738/refs/heads/main/s/tweengui/v1"))()
    end,
})

local Button2 = Tab2:CreateButton({
    Name = "Variant 2",
    Callback = function()
        Rayfield:Notify({
            Title = "In Progress...",
            Content = "Releasing soon",
            Duration = 6.5,
            Image = "bell-ring",
        })
    end,
})

-- Loaded notification
Rayfield:Notify({
    Title = "1738 Hub Loaded!!",
    Content = "Enjoy....",
    Duration = 6.5,
    Image = "bell-ring",
})
